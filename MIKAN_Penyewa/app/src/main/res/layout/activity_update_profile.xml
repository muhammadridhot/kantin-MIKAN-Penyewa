<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutimg"
        android:gravity="center"
        android:orientation="vertical">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image_update"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:text="Choose Img"
            android:id="@+id/update_img"
            android:textAllCaps="false" />
    </LinearLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="308dp"
        android:layout_height="58dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/layoutusername"
        android:layout_below="@id/layoutimg">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txtusernameupdate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawablePadding="10dp"
            android:hint="Username"
            android:maxLength="20"
            android:singleLine="true" android:textColor="@color/text_color_primary"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnUpdate_profile"
        android:background="@drawable/button_shape"
        android:text="Update"
        android:textColor="@color/primary_text_material_dark"
        android:layout_below="@id/layoutusername"
        android:layout_marginTop="45dp"
        android:layout_centerInParent="true"/>

</RelativeLayout>