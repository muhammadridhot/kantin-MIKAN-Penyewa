<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:id="@+id/cardimage"
            android:background="#81d4fa">
        </RelativeLayout>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/cardprofile"
            app:cardCornerRadius="5dp"
            android:layout_marginTop="-100dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/colorAccent" />
                <TextView
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textAlignment="center"
                    android:id="@+id/hasilstatus"
                    android:text="Status"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:id="@+id/cardsaldo">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:weightSum="3"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtsaldouser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rp. 0"
                    android:paddingLeft="30dp"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_account_balance_wallet_black_24dp"
                    android:fontFamily="@font/padauk"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <Button
                    android:layout_width="390dp"
                    android:layout_height="35dp"
                    android:id="@+id/btnTarikSaldo"
                    android:layout_marginRight="10dp"
                    android:layout_weight="2"
                    android:text="Tarik Saldo"
                    android:background="@drawable/button_metode_pembayaran"
                    android:textColor="@color/colorAccent"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/cardstatus"
            android:layout_marginTop="20dp">
            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:id="@+id/setstatus"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:layout_gravity="center"
                android:text="Set Status"/>
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardstatus"
            android:orientation="vertical"
            android:id="@+id/layoutupdate"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Account"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnUpdateProfile"
                    android:background="@drawable/button_transparant"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingStart="30dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:text="Update Profile"
                    android:textAlignment="textStart"
                    android:textAllCaps="false" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@id/layoutupdate"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Transaksi"/>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnHistoryTopUp"
                    android:background="@drawable/button_transparant"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingStart="30dp"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_history_accent"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:text="History Dompet Digital"
                    android:textAlignment="textStart"
                    android:textAllCaps="false" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnKeluar"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingStart="30dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:text="Keluar"
                    android:textAllCaps="false"
                    android:textAlignment="textStart"
                    android:textColor="#fa0000"
                    android:background="@drawable/button_transparant"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
</RelativeLayout>